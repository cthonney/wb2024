<div class='login-form mt-4'>
  <div class="form-logo">
    <%= image_tag "logo-full.svg" %>
  </div>

<div class= "card border-dark mb-3 p-5 mx-auto" style="width: 50%;">
<div class= "card-body text-dark">
  <h2>Log in</h2>
   <p>Log in to your IslePortal account to book and view your teleport travels.</p>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="d-grid gap-2 d-flex">
  <div class="form-actions">
  <% if @show_checkbox_recaptcha %>
    <%= recaptcha_tags %>
  <% else %>
    <%= recaptcha_v3(action: 'login', site_key: ENV['RECAPTCHA_SITE_KEY_V3']) %>
  <% end %>
    <%= f.button :submit, "Log in", class: 'btn main-cta-color-BonWup' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>
