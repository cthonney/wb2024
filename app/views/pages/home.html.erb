<main class="home">
        <section class="hero-left">
            <div class="hero-left-content">
                <div class="content-left">
                    <h1 class="header-gradient">Isle Portal Indian Ocean</h1>
                    <p>Experience seamless island-hopping with our cutting-edge teleportation service, connecting you effortlessly and ecologically to the Indian Ocean islands.</p>
                </div>
                <canvas class="webgl" data-controller="three"></canvas>
            </div>
        </section>

        <section id="booking-section">
            <div class="booking-container">
                <h2 class="header-gradient">Schedule Your Teleport Trip Now</h2>
                <%= simple_form_for @booking do |f| %>
                    <div class="input-group-container">
                        <div class="input-group gap-1">
                            <%= f.input :start_date,
                                        as: :string,
                                        input_html: { data: { controller: "datepicker" },
                                        class: 'form-select'
                                        },
                                        wrapper_html: { class: 'booking-form' },
                                        label_html: { class: 'input-group-text' }
                            %>
                                        <%# island start %>
                            <%= f.input :start_island_id,
                                        collection: Island.all,
                                        label_method: :name,
                                        value_method: :id,
                                        include_blank: false,
                                        wrapper_html: { class: 'booking-form' },
                                        label_html: { class: 'input-group-text' },
                                        input_html: { class: 'form-select' }
                            %>
                                        <%# island end %>
                            <%# island end %>
                            <%= f.input :end_island_id,
                                        collection: Island.all,
                                        label_method: :name,
                                        value_method: :id,
                                        include_blank: false,
                                        wrapper_html: { class: 'booking-form' },
                                        label_html: { class: 'input-group-text' },
                                        input_html: { class: 'form-select' }
                            %>
                        </div>
                        <div class="input-group second">
                            <%= f.input :adults, collection: 1..10, selected: 1, wrapper_html: { class: 'booking-form' },
                            label_html: { class: 'input-group-text' },
                            input_html: { class: 'form-select' }
                            %>
                            <%= f.input :kids, collection: 0..10, selected: 0,
                            wrapper_html: { class: 'booking-form' },
                            label_html: { class: 'input-group-text' },
                            input_html: { class: 'form-select' }
                            %>
                            <%= f.input :baggages, collection: 0..10, selected: 0,
                            wrapper_html: { class: 'booking-form' },
                            label_html: { class: 'input-group-text' },
                            input_html: { class: 'form-select' }
                            %>
                            <%= f.input :pets, collection: 0..10, selected: 0,
                            wrapper_html: { class: 'booking-form' },
                            label_html: { class: 'input-group-text' },
                            input_html: { class: 'form-select' }
                            %>
                        </div>
                </div>

              <% if user_signed_in? %>
                <%= f.button :submit, 'Teleport', class: 'btn main-cta-color-BonWup-book' %>
              <% else %>
                <button
                  type="button"
                  class="btn main-cta-color-BonWup-book"
                  data-bs-toggle="modal"
                  data-bs-target="#loginModal"
                >
                  Teleport
                </button>
              <% end %>
            <% end %>
          </div>
        </section>

        <section id="about">
            <div class="about-text">
                <h2 class="header-gradient">Unlock Your Island Adventures:<br>Plan Your Teleportation Journey Today!</h2>
                <p>Welcome to Isle Portal teleportation service, where we make the impossible, possible! Say goodbye to long hours of travel and hello to instant connections with loved ones, emergency assistance, seamless medical visits, and unforgettable island explorations.</p>
                <p>With Isle Portal, every journey becomes a joyous adventure, as we whisk you away to your destination in the blink of an eye.</p>
                <p>Join us and embrace the magic of teleportation for all your travel needs â€“ because life's too short for waiting!</p>
                <a href="#booking-section" class="tele-btn">Teleport Now</a>
            </div>
            <%=image_tag("logo-full.svg") %>
        </section>

        <section id="islands" >
            <h2 class="header-gradient">Indian Ocean Gems - All Just A Teleport Way</h2>
            <div class="islands-card-container">

                <% @islands.each do |island| %>
                <article class="island-card">
                    <i class="fa-sharp fa-solid fa-thought-bubble" style="color: #6184d8;"></i>
                    <h3><i class="fa-solid fa-arrow-right"></i><%= island.name %></h3>
                    <p><%= island.title %></p>
                    <%= link_to "Discover #{island.name}", island_path(island), class: "btn main-cta-color-BonWup isl w-100" %>
                </article>
                <% end %>
            </div>
        </section>

        <section id="advantages">
            <h2 class="header-gradient">Every Island Paradise Within Reach With Isle Portal !</h2>
            <div class="adv-container">
                <div class="adv-card">
                    <i class="fa-solid fa-gauge-high"></i>
                    <h4>Time-Saving</h4>
                </div>

                <div class="adv-card">
                    <i class="fa-solid fa-globe"></i>
                    <h4>Travel Anywhere</h4>
                </div>

                <div class="adv-card">
                    <i class="fa-solid fa-bridge"></i>
                    <h4>Cultural Bridge</h4>
                </div>

                <div class="adv-card">
                    <i class="fa-solid fa-leaf"></i>
                    <h4>Eco-Friendly</h4>
                </div>
            </div>
            <div class="adv-btn-container">
                <a href="#booking-section" class="adv-btn">Teleport Now</a>
            </div>
        </section>

